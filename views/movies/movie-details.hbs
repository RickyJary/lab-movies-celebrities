<div class="container mb-5">
  <h1 class="my-5">{{movie.name}}</h1>

  <div class="row">
    <div class="col-6">
      <p><strong>Genre:</strong> {{movie.genre}}</p>
      <p><strong>Plot:</strong> {{movie.plot}}</p>
      <p><strong>Cast:</strong></p>
      <ul >
        {{#each movie.cast}}
          <li class="mt-2">
            <strong>Name:</strong> {{this.name}}<br>
            <strong>Occupation:</strong> {{this.occupation}}<br>
            <strong>Catch Phrase:</strong> {{this.catchPhrase}}
          </li>
        {{/each}}
      </ul>
      

      <div class="movie-action-buttons d-flex">
        <form action="/movies/{{movie.id}}/delete" method="POST">
          <button type="submit" class="btn btn-danger">Delete</button>
        </form>
        <a href="/movies/{{movie.id}}/edit" class="btn btn-primary ml-3">Edit</a>
      </div>
    </div>
  </div>
</div>